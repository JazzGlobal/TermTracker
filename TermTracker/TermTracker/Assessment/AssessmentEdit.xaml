<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TermTracker.Assessment.AssessmentEdit">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Save" Activated="OnSaveButtonClicked"  Order="Primary" Priority="0"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="30,10,30,10">
            <Label x:Name="assessmentNameTitle" FontSize="Title" Margin="0,0,10,0" Padding="30,10,30,10" HorizontalTextAlignment="Center"/>
            <Label x:Name="assessmentNameLabel"/>
            <Entry x:Name="assessmentNameValue"></Entry>
            <Label x:Name="assessmentStartDateLabel" Text="Start Date"></Label>
            <DatePicker x:Name="assessmentStartDateValue"></DatePicker>
            <Label x:Name="assessmentEndDateLabel" Text="End Date"></Label>
            <DatePicker x:Name="assessmentEndDateValue"></DatePicker>
            <Label x:Name="assessmentTypeLabel" FontAttributes="Bold" Text="Type"/>
            <Picker x:Name="assessmentTypeValuePicker"></Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>