<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TermTracker.Assessment.AssessmentView">
    <ContentPage.Content>
        <StackLayout Padding="30,10,30,10">
            <Label x:Name="assessmentNameLabel" FontSize="Title" Margin="0,0,10,0" Padding="30,10,30,10" HorizontalTextAlignment="Center"/>
            <Label x:Name="assessmentDurationLabel" Margin="0,0,10,0" Padding="30,10,30,10" HorizontalTextAlignment="Center"/>
            <Label x:Name="assessmentTypeLabel" FontAttributes="Bold" Text="Type"/>
            <Label x:Name="assessmentTypeValue"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>