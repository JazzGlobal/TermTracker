<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TermTracker.Instructor.InstructorEdit">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Save" Activated="OnSaveButtonClicked"  Order="Primary" Priority="0"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="instructorEditLabel" FontSize="Title" Margin="0,0,10,0" Padding="30,10,30,10" HorizontalTextAlignment="Center"/>
            <Label x:Name="instructorNameLabel"></Label>
            <Entry x:Name="instructorNameValue"></Entry>
            <Label x:Name="instructorPhoneNumberLabel"></Label>
            <Entry x:Name="instructorPhoneNumberValue"></Entry>
            <Label x:Name="instructorEmailLabel"></Label>
            <Entry x:Name="instructorEmailValue"></Entry>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>